{
  "title": "Fracking 3",
  "publicationStatus": "draft",
  "subtitle": "",
  "helpOnLoad": true,
  "about": "",
  "theme": ["has", "standalone-playback", "graph-title-bg"],
  "aspectRatio": 1.2,
  "fontScale": 0.8,
  "models": [
    {
      "type": "iframe-model",
      "id": "iframe-model",
      "url": "models/lab-version/1/iframe-model/iframe-model.json",
      "modelOptions":{
        "url": "//models-resources.concord.org/agentscript/fracking/lab-embeddable.html",
        "drillDirection": null
      },
      "viewOptions": {
        "aspectRatio": 1.5,
        "controlButtons": "play_reset"
      },
      "onLoad": [
        "onPropertyChange('explosionPossible', function() {",
        "  setComponentDisabled('explode-btn', !get('explosionPossible'));",
        "});",
        "onPropertyChange('fillPossible', function() {",
        "  setComponentDisabled('fill-water-btn', !get('fillPossible'));",
        "  setComponentDisabled('fill-propane-btn', !get('fillPossible'));",
        "});",
        "onPropertyChange('removeFluidPossible', function() {",
        "  setComponentDisabled('pump-out-btn', !get('removeFluidPossible'));",
        "});"
      ]
    }
  ],
  "parameters": [
    {
      "name": "initialYear",
      "initialValue": null
    }
  ],
  "outputs": [
    {
      "name": "explosionPossible",
      "value": "return iframeOutput('explosionPossible') || false;"
    },
    {
      "name": "fillPossible",
      "value": "return iframeOutput('fillPossible') || false;"
    },
    {
      "name": "removeFluidPossible",
      "value": "return iframeOutput('removeFluidPossible') || false;"
    },
    {
      "name": "year",
      "value": "return iframeOutput('year');"
    },
    {
      "name": "graphYear",
      "value": "return get('initialYear') ? get('year') - get('initialYear') : null;"
    },
    {
      "name": "well0",
      "value": "return iframeOutput('well0') || 0;"
    },
    {
      "name": "well1",
      "value": "return iframeOutput('well1') || 0;"
    },
    {
      "name": "well2",
      "value": "return iframeOutput('well2') || 0;"
    },
    {
      "name": "wellsCombined",
      "value": "return iframeOutput('wellsCombined') || 0;"
    },
    {
      "name": "leakedMethane",
      "value": "return iframeOutput('leakedMethane') || 0;"
    },
    {
      "name": "pondWaste",
      "value": "return iframeOutput('pondWaste') || 0;"
    }
  ],
  "helpTips": [
  ],
  "components": [
    {
      "type": "radio",
      "id": "drill",
      "orientation": "horizontal",
      "label": "Drill",
      "labelOn": "top",
      "style": "toggle",
      "property": "drillDirection",
      "options": [
        {
          "text": "<i class='fa fa-long-arrow-left'></i>",
          "value": "left"
        },
        {
          "text": "<i class='fa fa-long-arrow-down'></i>",
          "value": "down"
        },
        {
          "text": "<i class='fa fa-long-arrow-right'></i>",
          "value": "right"
        }
      ]
    },
    {
      "type": "button",
      "id": "explode-btn",
      "text": "Set off explosions",
      "width": "20em",
      "disabled": true,
      "action": "explode()"
    },
    {
      "type": "button",
      "id": "fill-water-btn",
      "text": "Fill with water",
      "width": "9em",
      "disabled": true,
      "action": "floodWater()"
    },
    {
      "type": "button",
      "id": "fill-propane-btn",
      "text": "Fill with propane",
      "width": "9em",
      "disabled": true,
      "action": "floodPropane()"
    },
    {
      "type": "button",
      "id": "pump-out-btn",
      "text": "Pump out fracking fluid",
      "width": "20em",
      "disabled": true,
      "action": "pumpOut(); if (!get('initialYear')) { set('initialYear', get('year')); }"
    },
    {
      "id": "methane-graph",
      "type": "graph",
      "properties": [
        "well0",
        "well1",
        "well2",
        "wellsCombined"
      ],
      "xProperty": "graphYear",
      "enableAxisScaling": false,
      "enableZooming": false,
      "title": "Methane Production",
      "titlePosition": "left",
      "width": "100%",
      "height": "100%",
      "xlabel": "Time (years)",
      "xmin": 0,
      "xmax": 40,
      "ylabel": "Methane",
      "ymin": 0,
      "ymax": 600,
      "xTickCount": 6,
      "yTickCount": 6,
      "xFormatter": "d",
      "yFormatter": ".2r",
      "dataColors": [
        "#d95f02",
        "#1b9e77",
        "#7570B3",
        "#000000"
      ],
      "legendLabels": [
        "Well 1",
        "Well 2",
        "Well 3",
        "Combined"
      ],
      "syncXAxis": "contaminant-graph"
    },
    {
      "id": "contaminant-graph",
      "enableAxisScaling": false,
      "enableZooming": false,
      "type": "graph",
      "properties": [
        "leakedMethane",
        "pondWaste"
      ],
      "xProperty": "graphYear",
      "title": "Contaminants in the Aquifer",
      "titlePosition": "left",
      "width": "100%",
      "height": "100%",
      "xlabel": "Time (years)",
      "xmin": 0,
      "xmax": 40,
      "ylabel": "Contaminants",
      "ymin": 0,
      "ymax": 100,
      "xTickCount": 6,
      "yTickCount": 6,
      "xFormatter": "d",
      "yFormatter": ".2r",
      "dataColors": [
        "#a00000",
        "#44a000"
      ],
      "legendLabels": [
        "Leaked methane",
        "Pond waste"
      ],
      "syncXAxis": "methane-graph"
    },
    {
      "id": "playback",
      "type": "playback",
      "stepping": true
    }
  ],
  "layout": {
		"playback-container": [
      "playback"
    ],
    
    "bottom-1": [
      "drill"
    ],
    "bottom-2": [
      "explode-btn"
    ],
    "bottom-3": [
      
        "fill-water-btn"
      ,
      
        "fill-propane-btn"
      
    ],
    "bottom-4": [
      "pump-out-btn"
    ],
    "right-top": [
      "methane-graph"
    ],
    "right-bottom": [
      "contaminant-graph"
    ]
  },
  "template": [
    {"id": "playback-container",
      "top": "model.bottom",
      "left": "model.left"
    },
    {
      "id": "bottom-1",
      "left": "model.left",
      "top": "playback-container.bottom",
      "padding-top": "0.8em"
    },
    {
      "id": "bottom-2",
      "left": "model.left",
      "top": "bottom-1.bottom",
      "padding-top": "1.5em"
    },
    {
      "id": "bottom-3",
      "left": "model.left",
      "top": "bottom-2.bottom",
      "padding-top": "0.5em"
    },
    {
      "id": "bottom-4",
      "left": "model.left",
      "top": "bottom-3.bottom",
      "padding-top": "0.5em"
    },
    {
      "id": "right-top",
      "width": "model.width * 0.55",
      "height": "model.height * 0.9",
      "left": "model.right",
      "top": "model.top",
      "padding-left": "0.3em"
    },
    {
      "id": "right-bottom",
      "width": "model.width * 0.55",
      "height": "model.height * 0.9",
      "left": "model.right",
      "top": "right-top.bottom",
      "padding-left": "0.3em"
    }
  ]
}
