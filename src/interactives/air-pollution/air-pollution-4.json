{
  "title": "Air Pollution 4",
  "publicationStatus": "draft",
  "subtitle": "Thermal Inversions",
  "helpOnLoad": true,
  "about": "Use the model to create thermal inversions, and explore the effect of thermal inversions on smog events.",
  "theme": ["has","has-air-pollution","no-slider-bar"],
  "aspectRatio": 1.3,
  "fontScale": 0.9,
  "models": [
    {
      "type": "iframe-model",
      "id": "iframe-model",
      "url": "models/lab-version/1/iframe-model/iframe-model.json",
      "modelOptions":{
        "url": "//models-resources.concord.org/agentscript/air-pollution/lab-embeddable-with-air-temp.html",
        "includeSunlight": true,
        "includeInversionLayer": true,
        "windSpeed": 0,
        "numCars": 2,
        "numFactories": 2,
        "sunlightAmount": 8,
        "rainRate": 0,
        "carPollutionRate": 200,
        "factoryPollutionRate": 300
      },
      "viewOptions": {
        "controlButtons": "play_reset"
      },
      "onLoad": []
    }
  ],
  "parameters": [
  ],
  "outputs": [
    {
      "name": "ticks",
      "value": "return iframeOutput('ticks');"
    },
    {
      "name": "primaryAQI",
      "value": "return iframeOutput('primaryAQI');"
    },
    {
      "name": "secondaryAQI",
      "value": "return iframeOutput('secondaryAQI');"
    }
  ],
  "helpTips": [
    {
      "component": "",
      "text": ["#How do I use this model?",
      "---",
      "Press the play button to start the model.",
      "",
      "",
      "Change the direction of the wind to see how thermal inversions affect the pollutant level over the city.",
      "",
      "",
      "You can hover over the controls for more information. Click to close this window."
       ]
    }
  ],
  "components": [
    {
      "id": "aqiGraph",
      "type": "graph",
      "resetAxesOnReset": true,
      "enableAutoScaleButton": true,
      "enableAxisScaling": true,
      "autoScaleX": true,
      "autoScaleY": true,
      "enableSelectionButton": false,
      "clearSelectionOnLeavingSelectMode": false,
      "enableDrawButton": false,
      "drawProperty": null,
      "markAllDataPoints": false,
      "showRulersOnSelection": false,
      "fontScaleRelativeToParent": true,
      "properties": [
        "primaryAQI",
        "secondaryAQI"
      ],
      "xProperty": "ticks",
      "title": "Air Pollutants",
      "lineWidth": 2,
      "width": "100%",
      "height": "100%",
      "xlabel": "Time (ticks)",
      "xmin": 0,
      "xmax": 2000,
      "ylabel": "AQI (Air Quality Index)",
      "ymin": 0,
      "ymax": 300,
      "xTickCount": 4,
      "yTickCount": 6,
      "xscaleExponent": 0.5,
      "yscaleExponent": 0.5,
      "xFormatter": "0f",
      "yFormatter": "0f",
      "lines": true,
      "bars": false,
      "dataColors": [
        "#664935",
        "#F47921",
        "#000000"
      ],
      "legendLabels": [
          "Primary Pollutants",
          "Secondary Pollutants"
      ],
      "legendVisible": true,
      "syncXAxis": false,
      "syncYAxis": false,
      "helpIcon": false
    },
    {
      "id": "windSlider",
      "type": "slider",
      "min": -30,
      "max": 30,
      "steps": 61,
      "title": "Wind",
      "labels": [
        {
          "value": "left",
          "label": "<i class='icon-arrow-left'></i>"
        },
        {
          "value": 0,
          "label": "None"
        },
        {
          "value": "right",
          "label": "<i class='icon-arrow-right'></i>"
        }
      ],
      "width": "100%",
      "height": "auto",
      "property": "windSpeed",
      "retainProperty": true,
      "disabled": false,
      "tooltip": "Change the speed and direction of the wind."
    },
    {
      "id": "sunSlider",
      "type": "slider",
      "min": 0,
      "max": 10,
      "steps": 10,
      "title": "Sunlight",
      "fillColor": "#efa03d",
      "labels": [
        {
          "value": "left",
          "label": "<i class='icon-minus'></i>"
        },
        {
          "value": "right",
          "label": "<i class='icon-plus'></i><i class='icon-plus'></i><i class='icon-plus'></i>"
        }
      ],
      "width": "100%",
      "height": "auto",
      "property": "sunlightAmount",
      "retainProperty": true,
      "disabled": false,
      "tooltip": "Change the amount of sunlight."
    },
    {
      "id": "rainSlider",
      "type": "slider",
      "min": 0,
      "max": 6,
      "steps": 6,
      "title": "Rain",
      "fillColor": "#52b6ca",
      "labels": [
        {
          "value": "left",
          "label": "<i class='icon-minus'></i>"
        },
        {
          "value": "right",
          "label": "<i class='icon-plus'></i><i class='icon-plus'></i><i class='icon-plus'></i>"
        }
      ],
      "width": "100%",
      "height": "auto",
      "property": "rainRate",
      "retainProperty": true,
      "disabled": false,
      "tooltip": "Change the amount of rain."
    }
  ],
  "layout": {
    "bottomLeft": [
      ["windSlider"]
    ],
    "topRight": [
      ["aqiGraph"]
    ],
    "bottomRight": [
      ["sunSlider"],
      ["rainSlider"]
    ]
  },
  "template": [
    {
      "id": "bottomLeft",
      "top": "model.bottom",
      "left": "model.left",
      "width": "interactive.width / 2",
      "padding-right": "1em"
    },
    {
      "id": "bottomRight",
      "top": "model.bottom",
      "right": "interactive.right",
      "width": "interactive.width / 2",
      "padding-right": "1em"
    },
    {
      "id": "topRight",
      "left": "model.right",
      "width": "0.7 * model.width",
      "height": "model.height",
      "padding-bottom": "1em",
      "padding-left": "0.5em"
    }
  ]
}
