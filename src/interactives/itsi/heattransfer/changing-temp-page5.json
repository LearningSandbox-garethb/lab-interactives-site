{
  "title": "Heat and Temperature 5: Changing Temperature",
  "publicationStatus": "draft",
  "subtitle": "",
  "about": "",
  "models": [
    {
      "type": "md2d",
      "id": "largesolid",
      "url": "models-converted/lab-version/1/md2d/itsi/heattransfer/largesolid.json",
      "importedFrom": "imports/legacy-mw-content/itsi/heattransfer/largesolid.mml",
      "viewOptions": {
        "controlButtons": "play_reset"
      }
    },
    {
      "type": "md2d",
      "id": "smallsolid",
      "url": "models-converted/lab-version/1/md2d/itsi/heattransfer/smallsolid.json",
      "importedFrom": "imports/legacy-mw-content/itsi/heattransfer/smallsolid.mml",
      "viewOptions": {
        "controlButtons": "play_reset"
      }
    }
  ],
    "parameters": [
    {
      "name": "temperatureIncrement",
      "initialValue": 5.0
    },
    {
      "name": "modelChoice",
      "initialValue": "largeModel",
        "onChange": [
          "switch(value) {",
          "  case 'largeModel': loadModel('largesolid'); set({ temperatureControl: true }); set( {'temperatureIncrement': 5 }); break;",
          "  case 'smallModel': loadModel('smallsolid'); set({ temperatureControl: true }); set( {'temperatureIncrement': 10 }); break;",
          "}"
      ]
    }
    ],
  "components": [
    {
      "type": "radio",
      "id": "select-model-buttons",
      "orientation": "horizontal",
      "property": "modelChoice",
      "options": [
        {
          "text": "Large solid",
          "value": "largeModel"
        },
        {
          "text": "Small solid (half size)",
          "value": "smallModel"
        }
      ]
    },
    {
      "type": "button",
      "id": "add-energy",
      "text": "Add energy",
      "action": [
      "start();",
        "set({ targetTemperature: get('targetTemperature') + 'temperatureIncrement' });"
      ]
    },
    {
      "type": "barGraph",
      "id": "thermometer",
      "property": "temperature",
      "units": true,
      "labelFormat": "3r",
      "min": 0,
      "max": 800
    }
  ],
  "layout": {
    "bottom": [
      "add-energy",
      "select-model-buttons"
    ],
    "right": [
      "thermometer"
    ]
  }
}
