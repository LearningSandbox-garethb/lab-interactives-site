{
  "title": "Flying Zippies - Model of Solid Tipping",
  "publicationStatus": "draft",
  "subtitle": "Sliding on the cart...",
  "category": "",
  "subCategory": "",
  "screenshot": "",
  "aspectRatio": 1.777777778,
  "fontScale": 1,
  "lang": "en-US",
  "i18nMetadata": "",
  "helpOnLoad": false,
  "theme": "no-framing", "showTopBar": false,
  "showBottomBar": false,
  "padding": 0,
  "about": "",
  "models": [
    {
      "type": "md2d",
      "id": "empty-atom",
      "url": "models/lab-version/1/md2d/sensing-science/flying-zippies/zippy-solid-tipping.json",
      "viewOptions": {
        "viewPortX": 1.0,
        "viewPortY": 1.0,
        "viewPortWidth": 12.5,
        "viewPortHeight": 7.03124
      },
      "onLoad": [
        "var INTERVAL = get('timeStep') * get('timeStepsPerTick') * 3;",      
        "var idx = 0;",
        "var vxBoost = -0.0009 * 0.8660;",
        "var vyBoost = -0.0009 * 0.5;",
        "var isLeftTilt = true;",
        "var isTilting = false;",
        "var startTime;",
        "var presentTime;",
        "set({temperatureControl: true}); set({targetTemperature: 200});",      
        "var airAtoms = [];",
        "var zippyAtoms = [];",
        "var cartAtoms = [];",
        "var airAtomsIndices = [];",
        "var zippyAtomsIndices = [];",
        "var cartAtomsIndices = [];",        
        "for (var i = 0, a; i < getNumberOfAtoms(); i++) {",
        "  a = getAtomProperties(i);",
        "  if (a.element == 0) {airAtoms.push(a); airAtomsIndices.push(i);}", 
        "  if (a.element == 1) {zippyAtoms.push(a); zippyAtomsIndices.push(i);}",
        "  if (a.element == 2) {cartAtoms.push(a); cartAtomsIndices.push(i);}",
        "}",
        "console.log('air: ' + airAtoms.length + ' zippy: ' + zippyAtoms.length + ' cart: ' + cartAtoms.length );",
        "set('airAtomsIndices', airAtoms);",
        "set('zippyAtomsIndices', zippyAtoms);",
        "set('cartAtomsIndices', cartAtoms);",
        "console.log('airAtomsIndices: ' + airAtomsIndices.length + ' zippyAtomsIndices: ' + zippyAtomsIndices.length + ' cartAtomsIndices: ' + cartAtomsIndices.length );",        
        "onPropertyChange('time',function(t) {",
        "  presentTime = t;",  
        "  if (presentTime % 4000 === 0 || isTilting) {",
        "    if (!isTilting) { startTime = presentTime; isTilting = true; }", 
        "    if (isLeftTilt) {",
        "      if (presentTime === startTime) {setImageProperties(0, {visible: false}); slideZippies(vxBoost,vyBoost);}",
        "      if (presentTime === startTime + 25) {setImageProperties(1, {visible: false}); }",
        "      if (presentTime === startTime + 50) {setImageProperties(2, {visible: false}); }",
        "      if (presentTime === startTime + 75) {setImageProperties(3, {visible: false}); isTilting = false; isLeftTilt = false;}",
        "      console.log('vx: ' + averageZippyXVelocity() + ' vy: ' + averageZippyYVelocity() );",
        "    } else {",
        "      if (presentTime === startTime)  {setImageProperties(3, {visible: true}); slideZippies( -vxBoost, -vyBoost);}",
        "      if (presentTime === startTime + 25) setImageProperties(2, {visible: true});",
        "      if (presentTime === startTime + 50) setImageProperties(1, {visible: true});",
        "      if (presentTime === startTime + 75) {setImageProperties(0, {visible: true}); isTilting = false; isLeftTilt = true;}",
        "    }",
        "  }",
        "});",
        "function averageZippyXVelocity() {",
        "   var sum = 0;",
        "   var atom;",
        "   for (var i = 0; i < zippyAtomsIndices.length; i++) {",
        "      atom = getAtomProperties( zippyAtomsIndices[i] );",
        "      sum = sum + atom.vx;",
        "   }",
        "   return sum / zippyAtomsIndices.length;",
        "}",
        "function averageZippyYVelocity() {",
        "   var sum = 0;",
        "   var atom;",
        "   for (var i = 0; i < zippyAtomsIndices.length; i++) {",
        "      atom = getAtomProperties( zippyAtomsIndices[i] );",
        "      sum = sum + atom.vy;",
        "   }",
        "   return sum / zippyAtomsIndices.length;",
        "}",        
        "function boostVelocity(xDelta, yDelta) {",
        "  var atom;",
        "  for (var i = 0; i < zippyAtoms.length; i++) {",
        "     atom = getAtomProperties( zippyAtomsIndices[i]);",
        "     setAtomProperties(zippyAtomsIndices[i], {vx:atom.vx + xDelta, vy:atom.vy + yDelta});",
        "  }",
        "}",
        "function slideZippies( dx, dy ) {",
        "  batch(function () {",
        "    boostVelocity(dx, dy);",
        "  });",
        "}",
        "start();"   
      ]
    }
  ],
    "parameters": [
    {
      "name": "airAtomsIndices",
      "initialValue": []
    },
    {   "name": "zippyAtomsIndices",
       "initialValue": []
    },
    {   "name": "cartAtomsIndices",
       "initialValue": []
    }    
  ],
  "outputs": [
    {
      "name": "temperature-red",
      "unitAbbreviation": "K",
      "label": "speed",
      "value": "return getTemperatureOfAtoms(get('airAtomsIndices'));"
    },
    {
      "name": "temperature-blue",
      "unitAbbreviation": "K",
      "label": "speed",
      "value": "return getTemperatureOfAtoms(get('zippyAtomsIndices'));"
    }
  ],
  "components": [],
  "layout": {},
  "template": "model-only"
}
