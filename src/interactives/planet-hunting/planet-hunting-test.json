{
  "title": "Planet Hunting (test)",
  "publicationStatus": "public",
  "theme": [
    "has",
    "standalone-playback",
    "no-slider-bar",
    "graph-title-bg"
  ],
  "aspectRatio": 1.35,
  "fontScale": 0.7,
  "models": [
    {
      "type": "iframe-model",
      "id": "iframe-model",
      "url": "models/lab-version/1/iframe-model/iframe-model.json",
      "modelOptions": {
        "url": "//concord-consortium.github.io/space-models/planet-hunting/",
        "timestep": 0.001,
        "planet.diameter": 1,
        "planet.rocky": true,
        "telescope.precision": 100
      },
      "viewOptions": {
        "controlButtons": "play_reset"
      },
      "onLoad": [
      ]
    }
  ],
  "outputs": [
    {
      "name": "time",
      "value": "return iframeOutput('time') * 365 || 0;"
    },
    {
      "name": "starCamVelocity",
      "value": "return iframeOutput('telescope.starCamVelocity') || 0;"
    },
    {
      "name": "lightIntensity",
      "value": "return iframeOutput('telescope.lightIntensity') || 0;"
    },
    {
      "name": "planet.mass",
      "value": "return iframeOutput('planet.mass') || 0;"
    },
    {
      "name": "camera.tilt",
      "value": "return iframeOutput('camera.tilt') || 0;"
    }
  ],
  "parameters": [
  ],
  "components": [
    {
      "id": "circular-orbit",
      "type": "button",
      "text": "Make circular orbit",
      "action": "post('makeCircularOrbit');"
    },
    {
      "id": "clear-graphs",
      "type": "button",
      "text": "Clear graphs",
      "action": [
        "var newXMin = Math.round(get('time'));",
        "var newXMax = newXMin + 600;",
        "setComponentAttributes('star-cam-velocity', {xmin: newXMin, xmax: newXMax});",
        "setComponentAttributes('light-intensity', {xmin: newXMin, xmax: newXMax});"
      ]
    },
    {
      "id": "timestep",
      "type": "slider",
      "min": 0.0002,
      "max": 0.005,
      "steps": 100,
      "title": "Speed",
      "labels": [
        {
          "value": 0.0002,
          "label": "slow"
        },
        {
          "value": 0.005,
          "label": "fast"
        }
      ],
      "property": "timestep"
    },
    {
      "id": "planet-diameter",
      "type": "slider",
      "min": 1,
      "max": 50,
      "steps": 100,
      "title": "Planet diameter",
      "labels": [
        {
          "value": 1,
          "label": "1X Earth"
        },
        {
          "value": 50,
          "label": "50X Earth"
        }
      ],
      "property": "planet.diameter"
    },
    {
      "id": "telescope-precision",
      "type": "slider",
      "min": 5,
      "max": 100,
      "steps": 100,
      "title": "Telescope precision",
      "labels": [
        {
          "value": 5,
          "label": "5%"
        },
        {
          "value": 100,
          "label": "100%"
        }
      ],
      "property": "telescope.precision"
    },
    {
      "id": "planet-mass",
      "type": "numericOutput",
      "property": "planet.mass",
      "label": "Planet mass",
      "displayValue": "return value.toFixed(2) + ' X Earth';"
    },
    {
      "id": "planet-rocky",
      "type": "checkbox",
      "text": "Rocky planet",
      "property": "planet.rocky"
    },
    {
      "id": "camera-tilt",
      "type": "numericOutput",
      "property": "camera.tilt",
      "label": "The tilt is",
      "displayValue": "return value.toFixed(2) + ' degrees';"
    },
    {
      "id": "star-cam-velocity",
      "type": "graph",
      "properties": [
        "starCamVelocity"
      ],
      "xProperty": "time",
      "title": "Velocity of star relative to observer",
      "titlePosition": "left",
      "buttonsLayout": "horizontal",
      "buttonsStyle": "text",
      "lineWidth": 2,
      "xlabel": "Time (days)",
      "xmin": 0,
      "xmax": 600,
      "ylabel": "Velocity",
      "ymin": -2.5,
      "ymax": 2.5,
      "xTickCount": 8,
      "yTickCount": 4,
      "dataColors": [
        "#ff0000"
      ],
      "syncXAxis": "light-intensity"
    },
    {
      "id": "light-intensity",
      "type": "graph",
      "properties": [
        "lightIntensity"
      ],
      "xProperty": "time",
      "title": "Light intensity",
      "titlePosition": "left",
      "buttonsLayout": "horizontal",
      "buttonsStyle": "text",
      "lineWidth": 2,
      "xlabel": "Time (days)",
      "xmin": 0,
      "xmax": 600,
      "ylabel": "Velocity",
      "ymin": 0.7,
      "ymax": 1.02,
      "xTickCount": 8,
      "yTickCount": 4,
      "dataColors": [
        "#ff0000"
      ],
      "syncXAxis": "star-cam-velocity"
    },
        {
      "id": "playback",
      "type": "playback",
      "stepping": true
    }
  ],
 "template": [
          {
      "id": "playback-container",
      "top": "model.bottom",
      "left": "model.left",
      "padding-top": "0.75em",
      "padding-right": "0.5em"
    },
        {
      "id": "playback-right",
      "top": "model.bottom",
      "left": "playback-container.right",
      "padding-bottom": "0.5em"
    },
    {
      "id": "bottom-1",
      "left": "model.left",
      "top": "playback-right.bottom"
    },
    {
      "id": "bottom-2",
      "left": "bottom-1.right",
      "top": "model.bottom",
      "margin-left": "2em"
    },
    {
      "id": "bottom-3",
      "left": "bottom-2.right",
      "right": "interactive.right",
      "top": "model.bottom",
      "align": "right",
      "margin-top": "1em",
      "margin-right": "1em"
    },
    {
      "id": "right-top",
      "left": "model.right",
      "height": "interactive.height * 0.48",
      "width": "20em",
      "padding-left": "0.3em",
      "padding-right": "0.3em"
    },
    {
      "id": "right-bottom",
      "left": "model.right",
      "top": "right-top.bottom",
      "height": "interactive.height * 0.48",
      "width": "20em",
      "padding-left": "0.3em",
      "padding-right": "0.3em"
    }
  ],
  "layout": {
        "playback-container": [
    [
      "playback"
    ]
    ],
    "playback-right": [
      "timestep"
    ],
    "bottom-1": [
      ["planet-diameter"],
      ["telescope-precision"]
    ],
    "bottom-2": [
      ["camera-tilt"],
      ["planet-mass"],
      ["circular-orbit"],
      ["planet-rocky"]
    ],
    "bottom-3": [
      ["clear-graphs"]
    ],
    "right-top": [
      "star-cam-velocity"
    ],
    "right-bottom": [
      "light-intensity"
    ]
  }
}
