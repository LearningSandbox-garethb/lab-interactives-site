{
  "title": "The Effect of Mass on Temperature Change",
  "publicationStatus": "draft",
  "subtitle": "Heating solids",
  "aspectRatio": 1.248768472906404,
  "fontScale": 1.1143984220907297,
  "about": [
  ],
  "theme": ["hide-legends"],
  "models": [
     {
      "type": "md2d",
      "id": "small-solid",
      "url": "models/lab-version/1/md2d/ngss-assessment/mass-temperature-heating-solids/small-solid.json",
      "viewOptions": {
        "controlButtons": "play_reset",
        "controlButtonStyle": "text"
      },
      "onLoad": [
        "setComponentDisabled('add-energy', false);",
        "set('targetTemperature', 273);"
      ],
      "parameters": [
        {
          "name": "deltaT",
          "initialValue": 40
        }
      ]
    },
   {
      "type": "md2d",
      "id": "large-solid",
      "url": "models/lab-version/1/md2d/ngss-assessment/mass-temperature-heating-solids/large-solid.json",
      "viewOptions": {
        "controlButtons": "play_reset",
        "controlButtonStyle": "text"
      },
      "onLoad": [
        "setComponentDisabled('add-energy', false);",
        "set('targetTemperature', 273);"
      ],
      "parameters": [
        {
          "name": "deltaT",
          "initialValue": 20
        }
      ]
    }
  ],
  "parameters": [
    {
      "name": "energy-added-count",
      "initialValue": 0,
      "onChange": "set('celciusTemp', get('targetTemperature')-273);"
    },
    {
      "name": "maxTemp",
      "initialValue": 240
    },
    {
      "name": "celciusTemp",
      "unitAbbreviation": "Â°C",
      "initialValue": 0
    }
  ],
  "components": [
    {
      "type": "barGraph",
      "id": "thermometer",
      "min": -10,
      "max": 250,
      "title": "Temperature",
      "property": "celciusTemp",
      "units": true
    },
    {
      "id": "model-select",
      "type": "radio",
      "orientation": "horizontal",
      "options": [
        {
          "text": "Solid A",
          "action": "loadModel('small-solid');",
          "selected": true
        },
        {
          "text": "Solid B (double solid A mass)",
          "action": "loadModel('large-solid');"
        }
      ]
    },
    {
      "type": "button",
      "id": "add-energy",
      "text": "Add energy",
      "action": [
        "start();",
        "set('targetTemperature', get('targetTemperature')+get('deltaT'));",
        "set('energy-added-count', get('energy-added-count') + 1);",
        "if (get('celciusTemp') >= get('maxTemp')) {",
        "  setComponentDisabled('add-energy', true);",
        "  return;",
        "}"
      ]
    },
    {
      "type": "numericOutput",
      "id": "energy-added-count",
      "property": "energy-added-count",
      "label": ""
    },
    {
      "type": "text",
      "id": "times-label",
      "text": "units of thermal energy added."
    },
    {
      "type": "text",
      "id": "button-label",
      "text": "This button adds the same fixed amount of energy to the solid with each click."
    }
  ],
  "layout": {
    "right": [
      "thermometer"
    ],
    "bottom": [
      ["model-select"],
      ["add-energy", "energy-added-count", "times-label"],
      ["button-label"]
    ]
  }
}
