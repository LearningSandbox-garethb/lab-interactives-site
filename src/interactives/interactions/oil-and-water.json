{
  "title": "Oil and Water",
  "publicationStatus": "draft",
  "labEnvironment": "production",
  "aspectRatio": 1.45,
  "models": [
    {
      "type": "md2d",
      "id": "salt",
      "url": "models/lab-version/1/md2d/interactions/oil-and-water/model.json",
      "viewOptions": {
        "controlButtons": "play_reset"
      },
      "onLoad": [
        "setComponentDisabled('shake', false);"
      ]
    }
  ],
  "parameters": [
    {
      "name": "initialTemp",
      "initialValue": 800,
      "onChange": "set('targetTemperature', value)"
    },
    {
      "name": "timeoutID",
      "initialValue": null
    },
    {
      "name": "fastForward",
      "initialValue": false,
      "onChange": "set('timeStep', value ? 5 : 1);"
    },
    {
      "name": "shaking",
      "initialValue": false,
      "onChange": [
        "if (value) {",
        "  start();",
        "  if (getNumberOfObstacles() > 0) removeObstacle(0);",
        "  set('targetTemperature', 15000);",
        "  setComponentAttributes('shake', {text: 'Stop shaking'});",
        "  var timeoutID = setTimeout(function() {",
        "    if (timeoutID !== get('timeoutID')) return; // can't call clearTimeout in scripts...",
        "    set('shaking', false);",
        "    set('timeoutID', null);",
        "  }, 30000);",
        "  set('timeoutID', timeoutID);",
        "} else {",
        "  set('targetTemperature', get('initialTemp'));",
        "  setComponentAttributes('shake', {text: 'Mix and shake up'});",
        "  set('timeoutID', null);",
        "}"
      ]
    }
  ],
  "filteredOutputs": [
    {
      "name": "filteredPE",
      "property": "potentialEnergy",
      "period": 5000
    }
  ],
  "components": [
    {
      "type": "button",
      "id": "shake",
      "text": "Mix and shake up",
      "action": [
        "set('shaking', !get('shaking'));"
      ]
    },
    {
      "type": "checkbox",
      "id": "fast-forward",
      "text": "Fast forward",
      "property": "fastForward"
    },
    {
      "type": "barGraph",
      "id": "pe-graph",
      "property": "filteredPE",
      "labels": 0,
      "title": "Potential Energy",
      "min": -37,
      "max": -30
    }
  ],
  "template": [
    {
      "id": "right",
      "top": "model.top",
      "bottom": "model.bottom",
      "left": "model.right",
      "padding-left": "1em",
      "padding-right": "1em"
    },
    {
      "id": "bottom",
      "top": "right.bottom",
      "left": "model.left",
      "width": "model.width",
      "padding-top": "0.5em",
      "align": "center"
    }
  ],
  "layout": {
    "bottom": [
      "shake", "fast-forward"
    ],
    "right": [
      "pe-graph"
    ]
  }
}
